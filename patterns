n=int(input())
for i in range(n):
    for j in range(i):
        print(" ",end=" ")
    for j in range(2*n-2*i-1):
        print("*",end=" ")
    print()

#same like right angle but numbers
n=int(input())
for i in range(n):
    for j in range(i+1):
        print(i+1,end=" ")
    print()

n=int(input())
for i in range(n):
    for j in range(i+1):
        print(j+1,end=" ")
    print()


n=int(input())
for i in range(n):
    for j in range(n-i):
        print(j+1,end=" ")
    print()

