n=int(input())
for i in range(n):
    for j in range(i+1):
        print("*",end=" ")
    print()
for i in range(n):
    for j in range(n-i):
        print("*",end=" ")
    print()

1 
0 1 
1 0 1 
0 1 0 1 
n=int(input())
for i in range(n):
    for j in range(i+1):
        if(((i+j)%2)==0):
            print("1",end=" ")
        else:
            print("0",end=" ")
    print()
